<% provide(:title, @club.name) %>

<p class="pagetop-link-button">
  <%= link_to '<< Back to Club Listing', clubs_path, class: 'large-link' %>
</p>

<h2><%= @club.name %> - <%= @club.city %>, <%= @club.state %></h2>

<div>
  <% if @club.tees.blank? %>
    No tees have been added to this club.
  <% else %>
    <%= render template: 'clubs/list_club_tees', locals: { club: @club } %>
  <% end %>
</div>
<p>
  <%= link_to 'Add a Tee', new_club_tee_path(@club), class: 'large-link' %>
</p>
