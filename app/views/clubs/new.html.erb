<% provide(:title, 'Add Club') %>

<h2>Add a New Club</h2>

<%= form_for @club do |f| %>
  <ul class="flex-outer">
    <li>
      <%= f.label :name, class: 'new-club-label' %>
      <%= f.text_field :name, placeholder: 'Club Name', autofocus: true %>
    </li>
    <li>
      <%= f.label :city, class: 'new-club-label' %>
      <%= f.text_field :city, placeholder: 'City' %>
    </li>
    <li>
      <%= f.label :state, class: 'new-club-label' %>
      <%= f.text_field :state, placeholder: 'ST' %>
    </li>
    <li>
      <%= f.submit "Add Club" %>
      <%= f.button "Reset Form", type: :reset %>
      <button><%= link_to "Cancel", clubs_path, id: 'cancel-button' %></button>
    </li>
  </ul>
<% end %>
