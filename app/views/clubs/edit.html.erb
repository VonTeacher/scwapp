<% provide(:title, 'Edit Club') %>

<div class="center block">
  <h2>Edit Club</h2>

  <%= form_for @club, method: :put do |f| %>
    <ul class="flex-outer">
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
      <li>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </li>
      <li>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </li>
      <li>
        <%= f.submit 'Confirm Edit' %>
        <%= link_to 'Cancel', club_path(@club) %>
      </li>
    </ul>
  <% end %>
</div>